<li class="item">
  <LinkTo
    @route="topic"
    @models={{array @result.topic.slug @result.topic.id}}
    class="search-link"
  >
    <span class="topic">
      <span class="first-line">
        <TopicStatus @topic={{@result.topic}} @disableActions={{true}} />
        <span class="topic-title" data-topic-id={{@result.topic.id}}>
          {{#if this.unescapeHeadline}}
            <span>{{this.unescapedHeadline}}</span>
          {{else}}
            <SearchMenu::HighlightedSearch
              @string={{@result.topic.fancyTitle}}
              @term={{@term}}
            />
          {{/if}}
        </span>
      </span>
      <span class="second-line">
        {{category-link @result.topic.category link=false}}
        {{#if this.siteSettings.tagging_enabled}}
          {{discourse-tags @result.topic tagName="span"}}
        {{/if}}
      </span>
    </span>
    {{! WHY DO WE NEED THIS? MOBILE SEARCH IS ALWAYS FPS RIGHT? }}
    {{#if this.site.desktopView}}
      <span class="blurb">
        {{format-age @result.created_at}}
        <span> - </span>
        {{#if this.siteSettings.use_pg_headlines_for_excerpt}}
          <span>{{@result.blurb}}</span>
        {{else}}
          <span>
            <SearchMenu::HighlightedSearch
              @string={{@result.blurb}}
              @term={{@term}}
            />
          </span>
        {{/if}}
      </span>
    {{/if}}
  </LinkTo>
</li>
