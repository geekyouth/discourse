<div class="results">
  {{#if @suggestionKeyword}}
    <SearchMenu::Results::Assistant
      @term={{@term}}
      @suggestionKeyword={{@suggestionKeyword}}
      @results={{@suggestionResults}}
    />
  {{else if this.renderTooShort}}
    <div class="no-results">
      {{I18n "search.too_short"}}
    </div>
  {{else if this.renderNoResults}}
    <div class="no-results">
      {{I18n "search.no_results"}}
    </div>
  {{else if this.renderInitialOptions}}
    <SearchMenu::Results::InitialOptions @term={{@term}} />
  {{else}}
    {{#if this.resultTypes}}
      {{#each this.resultTypes as |resultType|}}
        <div class={{concat "search-result-" resultType.type}}>
          <ul
            class="list"
            aria-label={{concat (I18n "search.results") " " resultType.type}}
          >
            {{#each resultType.results as |result|}}
              <li class="item">
                <resultType.component @result={{result}} @term={{@term}} />
              </li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    {{else}}
      <div class="no-results">
        {{I18n "search.no_results"}}
      </div>
    {{/if}}
  {{/if}}
</div>
